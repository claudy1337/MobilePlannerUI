<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PropertyApp.AuthorPage"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="back.png"
             xmlns:st="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             st:SharedTransitionNavigationPage.TransitionSelectedGroup="products">
    
        <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
        <StackLayout Orientation="Horizontal">
            <Image Source="author.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="imgAuthor"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Source="dailyPlan.png"/>
            <Image Source="infoP.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="imgInfoPlan"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
            
        </ScrollView>
    
    
    
</ContentPage>